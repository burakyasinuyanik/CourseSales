@page
@model CourseSales.Web.Pages.Instructor.CourseModel
@{
    ViewData["Title"] = "Kurslarım";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Kurslarım</h2>
    <a asp-page="/Instructor/CreateCourse" class="btn btn-primary">Yeni Kurs Ekle</a>
</div>

@if (Model.Courses == null || !Model.Courses.Any())
{
    <div class="alert alert-info">Henüz eklenmiş bir kurs yok.</div>
}
else
{
    <div class="row">
        @foreach (var course in Model.Courses)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100">
                    <img src="@(string.IsNullOrWhiteSpace(course.ImageUrl) ? Url.Content("~/assets/images/placeholder.png") : course.ImageUrl)" class="card-img-top" alt="@course.Name" style="height:160px;object-fit:cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.Name</h5>
                        <p class="card-subtitle text-muted mb-2">@course.CategoryName</p>
                        <p class="card-text">@course.TruncateDescription(100)</p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold">@course.Price.ToString("C")</span>
                                <small class="text-muted">@course.Duration min • @string.Format("{0:0.0}", course.Rating) ★</small>
                            </div>

                            <div class="btn-group" role="group">
                                <a asp-page="/Instructor/EditCourse" asp-route-id="@course.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                <a asp-page="/Instructor/Details" asp-route-id="@course.Id" class="btn btn-sm btn-outline-secondary">Detay</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@course.Id" onsubmit="return confirm('Kaydı silmek istediğinize emin misiniz?');" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
